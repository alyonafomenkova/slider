mixin settings-panel(settings)
  form.settings-panel(id = `panel-` + settings.index)
    fieldset.settings-panel__fieldset
      legend.settings-panel__fieldset-title Orientation
      div.settings-panel__fieldset-inputs-wrapper
        div
          input.settings-panel__input-vertical(type = 'radio' name='orientation' id = `vertical_` + settings.index)
          label(for = `vertical_` + settings.index) Vertical
        div
          input.settings-panel__input-horizontal(type = 'radio' name='orientation' id = `horizontal_` + settings.index checked)
          label(for = `horizontal_` + settings.index) Horizontal
    fieldset.settings-panel__fieldset
      legend.settings-panel__fieldset-title Type
      div.settings-panel__fieldset-inputs-wrapper
        div
          input.settings-panel__input-single(type = 'radio' name='type' id = 'single_' + settings.index)
          label(for = 'single_' + settings.index) Single
        div
          input.settings-panel__input-interval(type = 'radio' name='type' id = 'interval_' + settings.index checked)
          label(for = 'interval_' + settings.index) Interval
    fieldset.settings-panel__fieldset
      legend.settings-panel__fieldset-title Additional
      div.settings-panel__fieldset-inputs-wrapper
        div
          input(type = 'checkbox' name='scale' id = 'scale_' + settings.index checked)
          label(for = 'scale_' + settings.index) Scale
        div
          input(type = 'checkbox' name='value' id = 'value_' + settings.index checked)
          label(for = 'value_' + settings.index) Value
    div.settings-panel__values
      label.settings-panel__values-label MIN
        input.settings-panel__values-input.settings-panel__values-input--min(type='number' name='min')
      label.settings-panel__values-label MAX
        input.settings-panel__values-input.settings-panel__values-input--max(type='number' name='max')
      label.settings-panel__values-label Step
        input.settings-panel__values-input.settings-panel__values-input--step(type='number' name='step' min='1')
      div.settings-panel__current-values-wrapper
        label.settings-panel__values-label Value From
          input.settings-panel__values-input.settings-panel__values-input--from(type='number' name='value1')
        label.settings-panel__values-label.settings-panel__values-label--to Value To
          input.settings-panel__values-input.settings-panel__values-input--to(type='number' name='value2')
